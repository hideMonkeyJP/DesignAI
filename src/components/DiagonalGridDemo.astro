<div class="diagonal-demo">
  <div class="diagonal-header">
    <h2>Diagonal Grid</h2>
    <p>斬新な視覚効果</p>
  </div>

  <div class="diagonal-grid">
    <div class="grid-item item1">
      <div class="content">
        <h3>01</h3>
        <p>Dynamic</p>
      </div>
    </div>
    <div class="grid-item item2">
      <div class="content">
        <h3>02</h3>
        <p>Creative</p>
      </div>
    </div>
    <div class="grid-item item3">
      <div class="content">
        <h3>03</h3>
        <p>Bold</p>
      </div>
    </div>
    <div class="grid-item item4">
      <div class="content">
        <h3>04</h3>
        <p>Modern</p>
      </div>
    </div>
  </div>

  <div class="diagonal-footer">
    <button class="diagonal-button">Explore More</button>
  </div>
</div>

<style>
  .diagonal-demo {
    background: #f8f9fa;
    min-height: 400px;
    padding: 2rem;
    overflow: hidden;
  }

  .diagonal-header {
    text-align: center;
    margin-bottom: 3rem;
    transform: skewY(-5deg);
  }

  .diagonal-header h2 {
    font-size: 2.5rem;
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }

  .diagonal-header p {
    color: #666;
  }

  .diagonal-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    transform: skewY(-5deg);
  }

  .grid-item {
    position: relative;
    background: white;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    overflow: hidden;
  }

  .grid-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(0,0,0,0.05) 25%, transparent 25%);
    background-size: 4px 4px;
    z-index: 1;
  }

  .grid-item:hover {
    transform: translateY(-5px) skewX(5deg);
  }

  .content {
    position: relative;
    z-index: 2;
  }

  .grid-item h3 {
    font-size: 2rem;
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }

  .grid-item p {
    color: #666;
  }

  .item1 { transform: skewX(-5deg); }
  .item2 { transform: skewX(5deg); }
  .item3 { transform: skewX(5deg); }
  .item4 { transform: skewX(-5deg); }

  .diagonal-footer {
    text-align: center;
    margin-top: 3rem;
    transform: skewY(-5deg);
  }

  .diagonal-button {
    background: #2c3e50;
    color: white;
    border: none;
    padding: 1rem 3rem;
    font-size: 1.1rem;
    transform: skewX(-15deg);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .diagonal-button:hover {
    background: #34495e;
    transform: skewX(-15deg) translateY(-2px);
  }

  @media (max-width: 768px) {
    .diagonal-grid {
      grid-template-columns: 1fr;
    }

    .diagonal-header h2 {
      font-size: 2rem;
    }
  }
</style>